# ── CamGuard Root .env.example ──
# Copy to .env and fill in your keys

# ── Database ──
DATABASE_URL=postgresql+asyncpg://camguard:camguard@postgres:5432/camguard

# ── Gemini ──
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_FAST=gemini-2.5-flash-lite
GEMINI_MODEL_STRONG=gemini-2.5-pro

# ── ElevenLabs ──
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-elevenlabs-voice-id

# ── Twilio ──
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# ── Snowflake ──
SNOWFLAKE_ACCOUNT=your-snowflake-account
SNOWFLAKE_USER=your-snowflake-user
SNOWFLAKE_PASSWORD=your-snowflake-password
SNOWFLAKE_DATABASE=CAMGUARD
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_ROLE=SYSADMIN

# ── Public URL (for Twilio webhooks & audio playback) ──
PUBLIC_BASE_URL=https://your-domain.com

# ── Frontend ──
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
